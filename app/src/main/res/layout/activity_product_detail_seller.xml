<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:id="@+id/root"
    tools:context=".activities.seller_side.ProductDetailSellerActivity">

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="false"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        android:layout_alignParentTop="true"
        app:sliderIndicatorPadding="3dp"
        android:background="@color/grey"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="@color/d_orange"
        app:sliderIndicatorUnselectedColor="@color/darkBlack"
        app:sliderScrollTimeInSec="1"
        app:sliderStartAutoCycle="false" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12sp"
        android:layout_marginTop="12sp"
        android:layout_marginEnd="12sp"
        android:layout_marginBottom="12sp"
        android:backgroundTint="@color/dark"
        android:background="@drawable/round_bg"
        android:padding="12sp"
        android:src="@drawable/round_arrow_back_ios_24"
        app:tint="@color/white" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/imageSlider"
        android:layout_above="@id/checkoutLay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="12sp"
                    android:layout_marginEnd="12sp"
                    android:layout_marginBottom="12sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:fontFamily="@font/poppins"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Catgory"
                        android:layout_marginTop="3sp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/d_orange"
                        android:textSize="18sp"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="12sp"
                    android:layout_marginEnd="12sp"
                    android:layout_marginBottom="12sp"
                    android:gravity="end"
                    android:text="$12.00"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:textColor="@color/dark"
                    android:textSize="20sp"
                    android:padding="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12sp"
                android:layout_marginTop="12sp"
                android:layout_marginEnd="12sp"
                android:layout_marginBottom="12sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Stock Available"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:fontFamily="@font/poppins"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/orange"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Description"
                android:layout_margin="12sp"
                android:padding="12sp"
                android:background="@drawable/et_bg"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Description"
                android:layout_margin="12sp"
                android:padding="12sp"
                android:textColor="@color/black"
                android:textSize="20sp" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/checkoutLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20sp"
        android:paddingEnd="15sp"
        android:paddingStart="15sp"
        android:paddingBottom="20sp"
        android:gravity="center_vertical"
        android:background="@drawable/background"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:text="Update Product"
            android:padding="15sp"/>

    </LinearLayout>

</RelativeLayout>