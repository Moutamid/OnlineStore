<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12sp"
    android:id="@+id/root"
    tools:context=".activities.seller_side.OrderDetailActivity">

    <include layout="@layout/header_back"  android:id="@+id/header" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                app:cardCornerRadius="8sp"
                app:cardBackgroundColor="@color/back"
                app:cardElevation="0sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order Summary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Item Count"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins" />

                        <TextView
                            android:id="@+id/count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="9"
                            android:textSize="16sp"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Item Total"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins" />

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$100"
                            android:textSize="16sp"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Delivery Fee"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$5"
                            android:textSize="16sp"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Payment"
                            android:textSize="22sp"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins" />

                        <TextView
                            android:id="@+id/totalPayment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$105"
                            android:textSize="22sp"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                app:cardCornerRadius="8sp"
                app:cardBackgroundColor="@color/back"
                app:cardElevation="0sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order Details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12sp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            app:cardCornerRadius="10sp"
                            app:cardElevation="0sp">

                            <ImageView
                                android:id="@+id/image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"/>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12sp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:textSize="16sp"
                                android:text="@string/app_name"
                                android:maxLines="1" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4sp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="start|center"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="12sp"
                                    android:text="Price: " />

                                <TextView
                                    android:id="@+id/price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:layout_weight="1"
                                    android:gravity="end|center"
                                    android:text="$12.00" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4sp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="start|center"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="12sp"
                                    android:text="Category: " />

                                <TextView
                                    android:id="@+id/category"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:layout_weight="1"
                                    android:gravity="end|center"
                                    android:text="fguisguhijoei" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:layout_gravity="end"
                                android:textSize="13sp"
                                android:layout_marginTop="12sp"
                                android:text="12/12/1222" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                app:cardCornerRadius="8sp"
                app:cardBackgroundColor="@color/back"
                app:cardElevation="0sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buyer Details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins" />



                    </LinearLayout>

                    <TextView
                        android:id="@+id/buyerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="18sp"
                        android:padding="8sp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins" />

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$100"
                        android:textSize="18sp"
                        android:padding="8sp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Payment"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:padding="8sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12sp"
                android:text="Complete Order"
                android:fontFamily="@font/poppins" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>